## wsl Ubuntu20-04 (focal)

sudo apt-get update
sudo apt-get upgrade -y
sudo add-apt-repository 'deb https://cloud.r-project.org/bin/linux/ubuntu focal-cran40/'
sudo apt-get update
sudo apt install -y r-base r-base-core r-recommended r-base-dev gdebi-core build-essential libcurl4-gnutls-dev libxml2-dev libssl-dev libfontconfig1-dev libcairo2-dev git
cd /home
wget --no-check-certificate https://download2.rstudio.org/server/bionic/amd64/rstudio-server-1.4.1106-amd64.deb
sudo gdebi rstudio-server-1.4.1106-amd64.deb

git config --global user.name "Pompylio"
git config --global user.email "pompylio.lima@gmail.com"

sudo su - -c "R -e \"install.packages(c('usethis'))\""
sudo su - -c "R -e \"install.packages(c('devtools'))\""
sudo su - -c "R -e \"install.packages(c('tidyverse'), INSTALL_opts = '--no-lock')\""
sudo su - -c "R -e \"install.packages(c('rmarkdown'))\""
sudo su - -c "R -e \"install.packages(c('kableExtra', 'flextable'))\""
sudo su - -c "R -e \"install.packages(c('shiny', 'shinycssloaders','shinydashboard','shinydashboardPlus','shinyjs','shinymanager','shinyWidgets'))\""
sudo su - -c "R -e \"install.packages(c('gmailr'))\""

